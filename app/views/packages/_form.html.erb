<%= form_with(model: package, local: true) do |form| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :lot_id, "Lote" %>
    <%= form.select :lot_id, lot_options,{}, class: 'input-texto'  %>
  </div>

  <div class="field">
    <%= form.label :Nome %>
    <%= form.text_field :name, class: "input-texto" %>
  </div>

  <div class="field">
    <%= form.label :Valor %>
    <%= form.text_field :value, class: "input-texto valor-field" %>
  </div>

  <div class="field">
    <%= form.label :Descrição %>
    <%= form.text_area :description, class: "input-textarea" %>
  </div>

  <div class="actions">
    <%= form.submit "Cadastrar" %>
    <%= link_to 'Voltar', packages_path %>
  </div>
<% end %>
