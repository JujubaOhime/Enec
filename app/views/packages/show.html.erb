<section class="edit-sections">
  <div class="container-table">
    <h1><%= @package.lot.name %></h1>
    <div class="form-edit-section">

      <div class="field">
        <label>Nome</label>
        <p><%= @package.name  %></p>
      </div>

      <div class="field">
        <label>Valor</label>
        <p><%= number_to_currency(@package.value, :unit => "R$ ", :separator => ",", :delimiter => ".") %></p>
      </div>

      <div class="field">
        <label>Descrição</label>
        <%if @package.description? %>
          <p><%= @package.description %></p>
        <% else %>
          <p>Sem descrição</p>
        <% end %>
      </div>
      <br><br>
      <%= link_to 'Voltar',packages_path, class:"link-show-section" %>
    </div>
  </div>
</section>

