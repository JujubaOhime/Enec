


<section class="index-sections">
  <div class="container-table">
  <p id="notice"><%= notice %></p>
    <h1>Lista de Pacotes</h1>
    <div class="titulo-com-edit">
      <button><%= link_to 'Novo Pacote', new_package_path %></button>
    </div>
    <div class="table">
      <table>
        <thead>
          <tr>
            <th>Lote</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Descrição</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @packages.each do |package| %>
            <tr>
              <td><%= package.lot.name %></td>
              <td><%= package.name %></td>
              <td> <%=number_to_currency(package.value, :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
              <td><%= package.description %></td>
              <td class="td-ações td-editar"><%= link_to 'Ver', package %></td>
              <td class="td-ações td-editar"><%= link_to 'Editar', edit_package_path(package) %></td>
              <td class="td-ações td-editar"><%= link_to 'Excluir', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

