<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :package_id, value: user_package(@current_user).id %>
  </div>

  <div class="field">
    <%= form.label :payment_option %>
    <%= form.select :payment_option, Payment.payment_options.keys, {include_blank: true}%>
  </div>

  <div class="field">
    <%= form.label :parceling_option %>
    <%= form.select :parceling_option, Payment.parceling_options.keys, {include_blank: true}%>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.hidden_field :user_id, value: @current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
