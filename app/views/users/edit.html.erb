  <div class="field">
    foto do perfil
    <%= form.file_field :image %>
  </div>  
    
  <div>
    comprovante de matricula
    <%= form.file_field :registration_proof %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

