                <%= link_to 'Editar', edit_sponsors_and_supporter_path(sponsors_and_supporter) %><%= link_to edit_sponsors_and_supporter_path(sponsors_and_supporter) do %><%= image_tag("edit.png", :alt => "imagem de editar", :class => "img-editar img-table") %><%end%>
