<section class="index-sections">
  <div class="container-table">
    <h1>Patrocinadores e Apoiadores</h1>
    <div class="titulo-com-edit"><%= link_to "Alterar título", edit_sponsors_and_supporters_title_path(@sponsor_supporters_title)%> <%= link_to edit_sponsors_and_supporters_title_path(@sponsor_supporters_title) do %><%= image_tag("edit.png", :alt => "imagem de editar", :class => "img-editar img-table") %><%end%></div>
