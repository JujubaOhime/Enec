<p id="notice"><%= notice %></p>

<h1>The Speakers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @the_speakers.each do |the_speaker| %>
      <tr>
        <td><%= the_speaker.title %></td>
        <td><%= the_speaker.description %></td>
        <td><%= link_to 'Show', the_speaker %></td>
        <td><%= link_to 'Edit', edit_the_speaker_path(the_speaker) %></td>
        <td><%= link_to 'Destroy', the_speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

