<p id="notice"><%= notice %></p>


<section class="index-sections">
  <div class="container-table">
    <h1>Realizadores do Evento</h1>
    <div class="titulo-com-edit">
      <button><%= link_to "Alterar título", edit_event_realizers_title_path(@event_realizer_title)%></button>
      <button><%= link_to "Voltar", sections_edit_path %></button>
    </div>
    <div class="table">
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="1">Descrição</th>
            <th colspan="1">Link</th>
            <th colspan="1">Ação</th>
          </tr>
        </thead>

        <tbody>
          <% @event_realizers.each do |event_realizer| %>
            <tr>
              <td class="td-ações td-editar"><%= event_realizer.name %></td>
              <td class="td-ações td-editar"><%= event_realizer.description %></td>
              <td class="td-ações td-editar"><%= event_realizer.link %></td>
              <td class="td-ações td-editar">
                <%= link_to 'Editar', edit_event_realizer_path(event_realizer) %><%= link_to edit_event_realizer_path(event_realizer) do %><%= image_tag("edit.png", :alt => "imagem de editar", :class => "img-editar img-table") %><%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

